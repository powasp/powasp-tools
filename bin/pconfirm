#!/bin/bash

# Asks to confirm if a user wants to do something
# Usage: pconfirm -v [message]


# Variables
QUESTION="Are you sure?"
SELECTMESSAGE="[y/n]"
ANSWER=""
YESVERBOSE=0
NOVERBOSE=0

# Check if verbose
while getopts "ynq:" OPT; do
	case $OPT in
		y)
			# Set verbose on "No" answers to true
			YESVERBOSE=1
			;;
		n)
			# Set verbose on "No" answers to true
			NOVERBOSE=1
			;;
		q)
			QUESTION="$OPTARG"
			;;
		\?)
			echo "Invalid option: -$OPTARG" &>2
			exit 2
			;;
		:)
			echo "Option -$OPTARG requires an argument." &>2
			exit 2
			;;
	esac
done

# Shifts the option index to after the flags
shift $(($OPTIND-1))

# Set message if available
[[ -n "$1" ]] && QUESTION="$1"

#Ask to confirm
read -r -p "$QUESTION $SELECTMESSAGE " ANSWER

# Check their response
case "$ANSWER" in
	[Yy])
		# Return true
		# If verbose, tell the user
		(( $YESVERBOSE )) && echo "Operation confirmed"
		exit 0
		;;
	*)
		# Return false
		# If verbose, tell the user
		(( $NOVERBOSE )) && echo "Operation cancelled"
		exit 1
		;;
esac
