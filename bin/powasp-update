#!/bin/bash

#Variables
BASEGITHUB="https://github.com/powasp/powasp-tools/"
TEMPDIR="/powasp_temp"
POWASPDIR="~/powasp-tools"

cd $POWASPDIR 

git pull 

echo "* Completing Update... *"
chmod -R +x /powasp/bin
sudo rm -rf $TEMPDIR

echo
echo "* Update complete! *"
echo
echo "----------------------------"
echo
