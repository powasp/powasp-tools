#!/bin/bash

# Updates powasp-tools

#Variables
BASEGITHUB="https://github.com/powasp/powasp-tools/"
POWASPDIR="/powasp"

# Check for flags
while getopts "d:" OPT; do
	case $OPT in
		d)
			# Set $POWASPDIR to argument
			POWASPDIR="$OPTARG"
			;;
		\?)
			echo "Invalid option: -$OPTARG" &>2
			exit 2
			;;
		:)
			echo "Option -$OPTARG requires an argument." &>2
			exit 2
			;;
	esac
done

# Shifts the option index to after the flags
shift $(($OPTIND-1))


pgap "----------------------------"

# Navigate to base directory
pgap 0 "Installing in $POWASPDIR ..."
cd $POWASPDIR

git pull

# Check if git worked
if [[ $? != 0 ]]; then
  pgap "!!! Update failed. Try running as root (sudo powasp-update) !!!"
  exit
fi

pgap 2 "* Completing Update... *"

# Make sure bin files have execute permissions
# chmod -R +x $POWASPDIR/bin
echo "* Update complete! *"
pgap "----------------------------"
